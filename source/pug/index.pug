mixin view(id)
  .view-wrapper.hidden(id=`view-${id}`)
    block
      
mixin view-preview(text)
  .view-placeholder
    .text= text
      
doctype
html
  head
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    meta(charset="utf-8")
    title Tahanan Project
    link(rel="stylesheet" type="text/css" href="css/main.css")
  body
    include navigation
    +view("map")
      include views/map
    +view("featured")
      include views/featured
    +view("landmark")
      include views/landmark
    +view("landing")
      include views/landing
    +view("about")
      include views/about
    +view("me")
      include views/me
    +view("sign-up")
      include views/sign-up
    +view("sign-in")
      include views/sign-in
    - 
      let scripts = [
        "js/app.js"
      ];
    each url in scripts
      script(src=url)
