mixin link(id, url, text)
  .navigation-link(class=`link-${id}`)
    a.text(href=`#/${url}`)= text
    if block
      .navigation-dropdown
        block

#header-wrapper
  .center-wrapper
    a.logo-wrapper(href="#/")
      img(src="img/logo-gold.png")
    .navigation-wrapper.auth-content
      +link("map", "map", "Map")
      +link("featured", "featured", "Featured")
      +link("about", "about", "About")
        +link("about", "about", "Tahanan")
        +link("about-faq", "about/faq", "FAQs")
        +link("about-content", "about/content", "Content")
      +link("me", "me", "My Profile")
        +link("me-edit", "", "Edit Profile")
        +link("me-memories", "me/memories", "My Memories")
        +link("sign-out", "", "Sign out")
